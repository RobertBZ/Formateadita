<Window x:Class="Directory.DynamicUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Directory"
        mc:Ignorable="d" ResizeMode="NoResize"
        Height="550" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid x:Name="GdContainer" Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel x:Name="Stack" Grid.Row="1" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="BtnOk" Content="Aceptar" Width="150" Height="25" Click="BtnOk_Click" />
        </StackPanel>
    </Grid>
</Window>
